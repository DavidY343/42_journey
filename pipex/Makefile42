#Variables

LIBFT_PATH = ./libft
LIBFT = $(LIBFT_PATH)/libft.a

CC = cc
RM = rm -f
CFLAGS = -Wall -Wextra -Werror

NAME = pipex

#SOURCES
SRCS_PIPEX	=	input_handler.c push_op.c push_swap.c reverse_op.c rotate_op.c swap_op.c	\
					find_mid.c sort_one.c sort_two.c sort_utils.c stack_utils.c free_handler.c peek_op.c

DIR_PIPEX	=	$(addprefix ./src/, $(SRCS_PIPEX))

OBJS			= 	$(DIR_PIPEX:.c=.o)

#INSTRUCTIONS

all: $(NAME)

$(NAME): $(LIBFT) $(OBJS)
	$(CC) $(CFLAGS) $(DIR_PUSH_SWAP) -o $(NAME) $(LIBFT)

$(LIBFT):
	make -C $(LIBFT_PATH) all

clean:	
	make -C $(LIBFT_PATH) clean
	$(RM) $(OBJS) $(BONUS_OBJS)

fclean: clean
	make -C $(LIBFT_PATH) fclean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re